@model LearnForeignWords.Models.Collection

@{
	ViewData["Title"] = "Edit";
}

<h1>Создать</h1>

<h4>Collection</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label  class="control-label">Название</label>
				<input asp-for="Name" class="input" />
				<label  class="control-label">Язык</label>
				<select name="lang" class="input" aria-label="Default select example">
					<option selected value="en">Английский</option>
					<option value="fr">Французский</option>
					<option value="de">Немецкий</option>
					<option value="it">Итальянский</option>
				</select>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
